# Copy this file to terraform.tfvars and fill in your values.
# Never commit terraform.tfvars â€” it contains sensitive information.

# AWS region (must match the region used in the bootstrap script)
aws_region = "us-east-1"

# Apex domain for the Route53 zone.
# After `tofu apply`, update your registrar's NS records to the zone_nameservers output.
dns_zone = "example.com"

# Subdomain for the relay. Relay will be at https://relay.example.com
relay_subdomain = "relay"

# Your SSH public key (cat ~/.ssh/id_ed25519.pub)
ssh_public_key = "ssh-ed25519 AAAA... you@host"

# Restrict SSH to your IP for better security (e.g., ["203.0.113.42/32"])
allowed_ssh_cidrs = ["0.0.0.0/0"]

# S3 bucket name for relay binary artifacts (must be globally unique)
# CI uploads to: s3://<artifacts_bucket>/relay/flipper-mcp-relay
artifacts_bucket = "myorg-flipper-mcp-artifacts"
